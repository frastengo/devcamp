<%= form_for(@portofolio_item) do |f| %>

   <% if portofolio_item.errors.any? %>
      <% portofolio_item.errors.full_messages.each do |error| %>
        <%= js add_gritter(error, title: "Please pay attention!", sticky: false, time: 2000) %>
      <% end %>
  <% end %>




  <div class="row">
    <div class='col-sm-6'>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle  ,class: 'form-control'%>
      </div>
      <div class="form-group">
        <label class='btn btn-primary btn-block'>
          Upload a main image file <%= f.file_field :main_image, style: 'display:none' %>
        </label>
        
      </div>
      <div class="form-group">
        <label class='btn btn-primary btn-block'>
          Upload a thumb image file<%= f.file_field :thumb_image, style: 'display:none'%>
        </label>
        
      </div>
    </div>
    <div class='col-sm-6'>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body , class: 'form-control', rows: "13"%>
      </div>

    

    </div>
  </div>
  <hr>
  <h2>Technologies Used:</h2>
  <div>
    <%= f.fields_for :technologies do |technology_form| %>

      <%= render 'technology_fields', f: technology_form %>
      
    <% end %>
    <div>
      <%= link_to_add_association 'Add Technology', f, :technologies %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit 'Save Portofolio Item', class: 'btn btn-primary btn-block'%>
  </div>
<% end %>
