<div class='container portfolio-container'>
    <div class='row'>
        <div class="col-md-7">
            <%= image_tag portofolio_img(@portofolio_item.main_image.url, ''), width: '100%' %>
        </div>
        <div class="col-md-5">
            <h1><%= @portofolio_item.title %></h1>

            <em><%= @portofolio_item.subtitle %></em>

            <p><%= @portofolio_item.body %></p>

            <h2>Technologies Used:</h2>

            <% @portofolio_item.technologies.each do |t| %>
            <p><%= t.name %></p>
            <% end %>

            <% if logged_in?(:site_admin) %>
                <div >
                    <%= link_to 'Edit Item', edit_portofolio_path(@portofolio_item), class: 'btn btn-warning btn-block'%>
                </div>
            <% end %>

            

        </div>
    </div>
</div>